{
  "info": {
    "name": "Lucky SMS API Collection",
    "description": "来财学生管理系统API测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "用户登录",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "phone",
              "value": "13812345678",
              "type": "text"
            },
            {
              "key": "keyhash",
              "value": "password123",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8081/api/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "login"]
        }
      }
    },
    {
      "name": "查询课程容量",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8081/api/course/capacity/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "course", "capacity", "1"]
        }
      }
    },
    {
      "name": "抢课",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "studentId",
              "value": "1",
              "type": "text"
            },
            {
              "key": "assignmentId",
              "value": "1",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8081/api/course/select",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "course", "select"]
        }
      }
    },
    {
      "name": "退课",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "studentId",
              "value": "1",
              "type": "text"
            },
            {
              "key": "assignmentId",
              "value": "1",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8081/api/course/drop",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "course", "drop"]
        }
      }
    },
    {
      "name": "查询可选课程",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8081/api/course/available",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "course", "available"]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": ["// 预请求脚本"]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// 测试脚本",
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test(\"Response has correct structure\", function () {",
          "    var jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('code');",
          "    pm.expect(jsonData).to.have.property('message');",
          "    pm.expect(jsonData).to.have.property('data');",
          "});"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081/api",
      "type": "string"
    }
  ]
}